<script>

  $(function () {

    $("#submit").click(function () {
      var email = $("#email").val();
      var password = $("#password").val();

      var loginInfo = {
        email:email,
        password:password
      };

      $.ajax({
        type: 'POST',
        url: "/auth/login",
        data: JSON.stringify(loginInfo),
        success: function (data) {
          window.location = "/courses/byuser/" + data.user.id;
        },
        error: function (data) {
           alert("error " + JSON.stringify(data));
        },
        contentType: "application/json",
        dataType: "json"
      });
    });
  });

</script>


